// Эта штука понадобилась моему intellisense чтобы заработал автокомплит и регистры
#define __AVR_ATmega2560__

// порты ввода вывода
#include <avr/io.h>

// общее
#include <avr/common.h>

// работа с прерываниями
#include <avr/interrupt.h>


// тактовая частота процессора
#define F_CPU 16000000UL

int main()
{
  // устанавливаем на вход 17 пин, который на по счёту в микроконтроллере 12й
  DDRH &= ~(1 << PH0);
  // ~00100000 == 11011111
  // 00100010 & 11011111 = 00000010

  // включаем подтяжку к питанию (pull-up)
  PORTH |= 1 << PH0;
}
